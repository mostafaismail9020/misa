
<process xmlns="http://www.hybris.de/xsd/processdefinition" start="investorVisaUserEmail" name="investorVisaTicketEmailProcess"
         processClass="com.investsaudi.model.InvestorVisaTicketDetailsEmailProcessModel" onError="error">

    <action id="investorVisaUserEmail" bean="investorVisaUserEmailAction">
        <transition name="OK" to="sendEmail"/>
        <transition name="NOK" to="error"/>
    </action>

    <action id="sendEmail" bean="sendEmail">
        <transition name="OK" to="removeSentEmail"/>
        <transition name="NOK" to="failed"/>
    </action>

    <action id="removeSentEmail" bean="removeSentEmail">
        <transition name="OK" to="success"/>
        <transition name="NOK" to="failed"/>
    </action>

    <end id="error" state="ERROR">Something went wrong while Sending Strategic Investor Email.</end>
    <end id="failed" state="FAILED">Process failed while  Sending Strategic Investor Email.</end>
    <end id="success" state="SUCCEEDED">Sending Strategic Investor User Successfully Notified</end>

</process>