	<bean class="com.investsaudi.portal.iam.request.SendRequestParameters">
		<property name="service" type="String"/>
		<property name="id" type="String"/>
		<property name="transId" type="String"/>
		<property name="random" type="String"/>
	</bean>
	
	<bean class="com.investsaudi.portal.iam.request.SendRequest">
		<import type="com.fasterxml.jackson.annotation.JsonIgnoreProperties" />
        <import type="com.fasterxml.jackson.annotation.JsonProperty"/>
        <annotations>@JsonIgnoreProperties(ignoreUnknown = true)</annotations>
		<property name="action" type="String">
			<annotations>@JsonProperty("Action")</annotations>
		</property>	
		<property name="parameters" type="com.investsaudi.portal.iam.request.SendRequestParameters">
			<annotations>@JsonProperty("Parameters")</annotations>
		</property>
	</bean>
	
	<bean class="com.investsaudi.portal.iam.request.CheckRequestStatusRequest" extends="com.investsaudi.portal.iam.request.SendRequest"/>
	
	<bean class="com.investsaudi.portal.iam.response.SendRequestResponse">
		<property name="transId" type="String"/>
		<property name="random" type="String"/>
